{
  "private": true,
  "name": "@ginpei/app-utils",
  "version": "0.0.0",
  "main": "out/",
  "types": "out/",
  "scripts": {
    "build:js": "esbuild src/index.ts --outfile=out/index.js --sourcemap --bundle --format=esm --external:./node_modules/*",
    "build:types": "npx tsc",
    "build": "npm run build:js && npm run build:types",
    "clean": "rm -rf out/",
    "dev": "concurrently --names 'JS  ,Type' 'npm run build:js -- --watch' 'npm run build:types -- --watch'",
    "lint": "eslint . && tsc"
  },
  "devDependencies": {
    "concurrently": "^6.3.0",
    "esbuild": "^0.14.20",
    "typescript": "^4.4.4"
  }
}
